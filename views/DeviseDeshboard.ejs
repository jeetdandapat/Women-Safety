<body>

        <div class="container">
        <!-- Top Control Bar -->
        <div class="glass top-bar">
            <div class="app-title">
                <i class="fas fa-shield-alt gradient-text"></i>
                <h1 class="gradient-text">Women Safety </h1>
            </div>
            
            <div class="controls">
                <div class="bluetooth-chip glass-card" id="bluetoothChip">
                    <div class="status-dot" id="statusDot"></div>
                    <i class="fab fa-bluetooth" style="color: #60a5fa;"></i>
                    <span id="connectionStatus">Disconnected</span>
                </div>
                <button class="connect-btn glass-card" id="connectBtn">
                    <i class="fas fa-link"></i>
                    <span>Connect Device</span>
                </button>
            </div>
        </div>
        

<h2 style="text-align: center; font-size: 2rem; margin: 2rem 0; font-weight: 600; display: flex; align-items: center; justify-content: center; gap: 0.6rem; color: #e0f7fa;">
  <i class="fa-solid fa-microchip" style="color: #c6f7ee; font-size: 2rem; animation: pulse 1.5s infinite;"></i>
  <span style="color: #e565fc;">Active Stats</span>
</h2>











 <!-- Sensor Grid -->
        <div class="sensor-grid">
            <!-- Pulse Rate Sensor (MAX30102) -->
            <div class="sensor-card" data-sensor="pulse">
                <div class="sensor-header">
                    <div class="sensor-icon pulse-icon">❤️</div>
                    <div class="sensor-info">
                        <h3>Pulse Rate</h3>
                        <!-- <p>MAX30102 Sensor</p> -->
                    </div>
                    <div class="sensor-status" id="pulseStatus">
                        <span class="status-dot"></span>
                        <!-- <span>Normal</span> -->
                    </div>
                </div>
                <div class="sensor-display">
                    <div class="gauge-container">
                        <svg class="circular-gauge" viewBox="0 0 200 200">
                            <circle cx="100" cy="100" r="90" fill="none" stroke="#2a2a2a" stroke-width="8"/>
                            <circle cx="100" cy="100" r="90" fill="none" stroke="url(#pulseGradient)" 
                                    stroke-width="8" stroke-dasharray="565" stroke-dashoffset="565" 
                                    id="pulseGauge" class="gauge-fill"/>
                            <defs>
                                <linearGradient id="pulseGradient" gradientUnits="userSpaceOnUse">
                                    <stop offset="0%" stop-color="#ff6b9d"/>
                                    <stop offset="100%" stop-color="#ff3366"/>
                                </linearGradient>
                            </defs>
                        </svg>
                        <div class="gauge-center">
                            <span class="gauge-value" id="pulseValue">--</span>
                            <span class="gauge-unit">BPM</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Motion Sensor (MPU-6050) -->
            <div class="sensor-card" data-sensor="motion">
                <div class="sensor-header">
                <div class="sensor-icon motion-icon">
  <i class="fas fa-running"></i>
</div>

                    <div class="sensor-info">
                        <h3>Motion/Activity</h3>
                        <!-- <p>MPU-6050 Accelerometer</p> -->
                    </div>
                    <div class="sensor-status" id="motionStatus">
                        <span class="status-dot"></span>
                        <!-- <span>Active</span> -->
                    </div>
                </div>
                <div class="sensor-display">
                    <div class="motion-display">
                        <div class="motion-value">
                            <span id="motionValue"></span>
                            <span class="unit">Steps</span>
                        </div>
                        <div class="motion-bars">
                            <div class="motion-bar" data-axis="x">
                                <label>X</label>
                                <div class="bar-fill" id="motionX"></div>
                            </div>
                            <div class="motion-bar" data-axis="y">
                                <label>Y</label>
                                <div class="bar-fill" id="motionY"></div>
                            </div>
                            <div class="motion-bar" data-axis="z">
                                <label>Z</label>
                                <div class="bar-fill" id="motionZ"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Proximity Sensor (VL53L0X) -->
            <div class="sensor-card" data-sensor="proximity">
                <div class="sensor-header">
                 <div class="sensor-icon proximity-icon">
  <i class="fas fa-satellite-dish"></i>
</div>

                    <div class="sensor-info">
                        <h3>Proximity</h3>
                        <!-- <p>VL53L0X Laser Sensor</p> -->
                    </div>
                    <div class="sensor-status" id="proximityStatus">
                        <span class="status-dot"></span>
                        <!-- <span>Safe</span> -->
                    </div>
                </div>
                <div class="sensor-display">
                    <div class="proximity-display">
                        <div class="distance-value">
                            <span id="proximityValue">--</span>
                            <span class="unit">cm</span>
                        </div>
                        <div class="proximity-visual">
                            <div class="proximity-waves">
                                <div class="wave"></div>
                                <div class="wave"></div>
                                <div class="wave"></div>
                            </div>
                            <div class="proximity-indicator" id="proximityIndicator"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thermal Sensor (MLX90614) -->
            <div class="sensor-card" data-sensor="thermal">
                <div class="sensor-header">
                    <div class="sensor-icon thermal-icon">
  <i class="fas fa-thermometer-half"></i>
</div>

                    <div class="sensor-info">
                        <h3>Temperature</h3>
                        <!-- <p>MLX90614 IR Sensor</p> -->
                    </div>
                    <div class="sensor-status" id="thermalStatus">
                        <span class="status-dot"></span>
                        <!-- <span>Normal</span> -->
                    </div>
                </div>
                <div class="sensor-display">
                    <div class="thermal-display">
                        <div class="temp-value">
                            <span id="thermalValue">--</span>
                            <span class="unit">°C</span>
                        </div>
                        <div class="temp-scale">
                            <div class="temp-bar">
                                <div class="temp-fill" id="thermalBar"></div>
                            </div>
                            <div class="temp-labels">
                                <span>35°C</span>
                                <span>100°C</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pressure Sensor (FSR402) -->
            <div class="sensor-card" data-sensor="pressure">
                <div class="sensor-header">
                  <div class="sensor-icon pressure-icon">
  <i class="fas fa-tachometer-alt"></i>
</div>



                    <div class="sensor-info">
                        <h3> Pressure</h3>
                        <!-- <p>FSR402 Force Sensor</p> -->
                    </div>
                    <div class="sensor-status" id="pressureStatus">
                        <span class="status-dot"></span>
                        <!-- <span>Normal</span> -->
                    </div>
                </div>
                <div class="sensor-display">
                    <div class="pressure-display">
                        <div class="pressure-value">
                            <span id="pressureValue">--</span>
                            <span class="unit">kg</span>
                        </div>
                        <div class="foot-pressure">
                            <div class="foot-outline">
                                <div class="pressure-point" data-point="heel" id="heelPressure"></div>
                                <div class="pressure-point" data-point="arch" id="archPressure"></div>
                                <div class="pressure-point" data-point="toe" id="toePressure"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

          



