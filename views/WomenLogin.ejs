<body>
     <!-- Top Navbar -->
  <div class="navbar">
    <div class="logo">
      <i class="fas fa-shield-alt"></i> Women Safety
    </div>
    <a href="#" class="about-link" onclick="showAbout()">
      <i class="fas fa-circle-info"></i> About
    </a>
  </div>
  <div class="page-container">
    <div class="form-header">
      <h1 class="form-title"><i class="fas fa-shield-alt"></i> Women Safety</h1>
      <p class="form-subtitle">Sign in to your Women Safety account</p>
    </div>

    <form id="loginForm" class="form">
      <div class="form-group">
        <label for="loginEmail">Email</label>
        <input type="email" id="loginEmail" required placeholder="Enter your email">
      </div>

      <div class="form-group">
        <label for="loginPassword">Password</label>
        <input type="password" id="loginPassword" required placeholder="Enter your password">
      </div>

      <div class="forgot-password">
        <button type="button" id="forgotPasswordBtn" class="link-btn">Forgot Password?</button>
      </div>

      <button type="submit" class="btn-primary"> <p><a href="/WomenDashboard">Sign In</a></p></button>
    </form>

    <div class="form-footer">
      <p>Don't have an account? <a href="/WomenRegistration">Join Women Safety</a></p>
    </div>
  </div>
    <!-- Bottom Navigation -->
  <div class="bottom-nav">
    <a href="/WomenRegistration" onclick="scrollToSection('women')">
      <i class="fas fa-female"></i>
      <span>Women</span>
    </a>
    <a href="/volunteer-register" onclick="scrollToSection('volunteer')">
      <i class="fas fa-hands-helping"></i>
      <span>Volunteer</span>
    </a>
    <a href="/pulish_registration" onclick="scrollToSection('police')">
      <i class="fas fa-user-shield"></i>
      <span>Police</span>
    </a>
  </div>

  <script src="login.js"></script>
</body>
</html>
