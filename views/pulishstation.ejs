<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background: linear-gradient(135deg, #1a1a2e, #16213e, #0f3460, #533483, #7209b7);
    min-height: 100vh;
    color: white;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
}

/* Header */
.header {
    background: rgba(15, 23, 42, 0.5);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(124, 58, 237, 0.2);
    position: sticky;
    top: 0;
    z-index: 50;
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.logo i {
    font-size: 2rem;
    color: #a855f7;
}

.logo h1 {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #a855f7, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.header-right {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.status-dot {
    width: 0.75rem;
    height: 0.75rem;
    background: #10b981;
    border-radius: 50%;
    animation: pulse 2s infinite;
}

.about-btn {
    /* background: rgba(168, 85, 247, 0.2); */
    background: linear-gradient(145deg, rgba(20, 3, 35, 0.3), rgba(79, 70, 229, 0.3));
    border: 1px solid rgba(168, 85, 247, 0.3);
    color: #a855f7;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.about-btn:hover {
    background: rgba(168, 85, 247, 0.3);
    transform: translateY(-2px);
}

/* Main Content */
.main-content {
    padding: 2rem 0;
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.stat-card {
    /* background: rgba(15, 23, 42, 0.5); */
    background: linear-gradient(145deg, rgba(20, 3, 35, 0.3), rgba(79, 70, 229, 0.3));
    backdrop-filter: blur(10px);
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 1.5rem;
    transition: all 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
}

.stat-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.stat-value {
    font-size: 2rem;
    font-weight: 700;
}

.stat-icon {
    font-size: 2rem;
    opacity: 0.8;
}

.alert-stat {
    border-left: 4px solid #ef4444;
}

.alert-stat .stat-value,
.alert-stat .stat-icon {
    color: #ef4444;
}

.women-stat {
    border-left: 4px solid #3b82f6;
}

.women-stat .stat-value,
.women-stat .stat-icon {
    color: #3b82f6;
}

.coverage-stat {
    border-left: 4px solid #10b981;
}

.coverage-stat .stat-value,
.coverage-stat .stat-icon {
    color: #10b981;
}

.response-stat {
    border-left: 4px solid #a855f7;
}

.response-stat .stat-value,
.response-stat .stat-icon {
    color: #a855f7;
}

/* Card Styles */
.card {
    /* background: rgba(15, 23, 42, 0.5); */
    background: linear-gradient(145deg, rgba(20, 3, 35, 0.3), rgba(79, 70, 229, 0.3));
    backdrop-filter: blur(10px);
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    margin-bottom: 2rem;
}

.card-header {
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.card-header h2 {
    font-size: 1.25rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.card-content {
    padding: 1.5rem;
}

/* Emergency Alerts */
.emergency-alerts .card-header h2 {
    color: #ef4444;
}

.alerts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 1rem;
}

.alert-item {
    background: rgba(239, 68, 68, 0.1);
    border-radius: 0.5rem;
    padding: 1rem;
    border-left: 4px solid;
}

.high-priority {
    border-left-color: #ef4444;
    animation: pulseAlert 0.5s infinite;
}

.medium-priority {
    border-left-color: #f59e0b;
}

.alert-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
}

.alert-name {
    color: #ef4444;
    cursor: pointer;
    transition: color 0.3s ease;
}

.alert-name:hover {
    color: #fca5a5;
}

.alert-time {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
}

.alert-message {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
}

.alert-distance {
    font-size: 0.75rem;
    color: #fbbf24;
}

.alert-actions {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
}

/* Police Station */
.police-station .card-header h2 {
    color: #fbbf24;
}

.station-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
}

.station-info .label {
    font-weight: 600;
    color: white;
}

/* Live Map */
.live-map .card-header h2 {
    color: #3b82f6;
}

.map-container {
    height: 400px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 0.5rem;
    position: relative;
    overflow: hidden;
    background-image: 
        linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px);
    background-size: 20px 20px;
}

.map-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.station-marker {
    font-size: 2.5rem;
    position: relative;
    z-index: 3;
}

.rotating-circle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80px;
    height: 80px;
    border: 3px dashed #ef4444;
    border-radius: 50%;
    animation: rotate 3s linear infinite;
    z-index: 2;
}

.coverage-circle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
    border: 2px solid rgba(59, 130, 246, 0.3);
    border-radius: 50%;
    z-index: 1;
}

.user-marker {
    position: absolute;
    font-size: 1.5rem;
    z-index: 4;
    animation: bounce 2s infinite;
}

.alert-marker {
    animation: bounce 2s infinite, pulseRed 1s infinite;
}

/* Nearby Women */
.nearby-women .card-header h2 {
    color: #10b981;
}

.women-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
}

.woman-item {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.5rem;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
}

.woman-info {
    flex: 1;
}

.woman-name {
    font-size: 1rem;
    font-weight: 600;
    color: white;
    margin-bottom: 0.25rem;
    cursor: pointer;
    transition: color 0.3s ease;
}

.woman-name:hover {
    color: #a855f7;
}

.woman-phone {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.25rem;
}

.woman-distance {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    display: block;
    margin-bottom: 0.5rem;
}

.status-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 1rem;
    font-weight: 500;
}

.status-badge.alert {
    background: rgba(239, 68, 68, 0.2);
    color: #fca5a5;
    border: 1px solid rgba(239, 68, 68, 0.3);
}

.status-badge.safe {
    background: rgba(16, 185, 129, 0.2);
    color: #86efac;
    border: 1px solid rgba(16, 185, 129, 0.3);
}

.woman-actions {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

/* Buttons */
.btn {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0.375rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
