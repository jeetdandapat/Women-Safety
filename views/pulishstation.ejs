/* Sidebar */
.sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    display: none;
}

.sidebar.open {
    display: flex;
}

.sidebar-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
}

.sidebar-content {
    position: relative;
    margin-left: auto;
    width: 400px;
    height: 100%;
    background: #1e293b;
    border-left: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: -20px 0 40px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
