.btn-track {
    background: #a855f7;
    color: white;
}

.btn-track:hover {
    background: #9333ea;
    box-shadow: 0 0 20px rgba(168, 85, 247, 0.4);
}

.btn-resolve {
    background: #10b981;
    color: white;
}

.btn-resolve:hover {
    background: #059669;
    box-shadow: 0 0 20px rgba(16, 185, 129, 0.4);
}

.btn-chat {
    background: rgba(168, 85, 247, 0.2);
    color: #c4b5fd;
