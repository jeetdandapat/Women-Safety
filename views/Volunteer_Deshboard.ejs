                            <div class="map-placeholder-content">
                                <div class="location-icon">
                                    <i></i>
                                </div>
                                <p style="color: #94a3b8; font-style: italic;">Interactive Map Loading...</p>
                            </div>
                        </div>
                    </div>

                    <!-- Status Card -->
