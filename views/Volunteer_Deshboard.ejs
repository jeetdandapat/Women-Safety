    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background-color: #f8fafc;
            min-height: 100vh;
            color: #0f172a;
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Professional Color Variables */
        :root {
            --primary: #1e40af;
            --primary-light: #3b82f6;
            --professional: #1e3a8a;
            --success: #059669;
            --success-light: #10b981;
            --emergency: #dc2626;
            --emergency-light: #ef4444;
            --warning: #d97706;
            --slate-50: #f8fafc;
            --slate-100: #f1f5f9;
            --slate-200: #e2e8f0;
            --slate-300: #cbd5e1;
            --slate-400: #94a3b8;
            --slate-500: #64748b;
            --slate-600: #475569;
            --slate-700: #334155;
            --slate-800: #1e293b;
            --slate-900: #0f172a;
            --white: #ffffff;
        }

        /* Animated background elements */
        .bg-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .bg-animation::before {
            content: '';
            position: absolute;
            top: 25%;
            left: 25%;
            width: 256px;
            height: 256px;
            background: linear-gradient(135deg, rgba(30, 64, 175, 0.1), rgba(59, 130, 246, 0.1));
            border-radius: 50%;
            filter: blur(96px);
            animation: pulse-professional 3s ease-in-out infinite;
        }

        .bg-animation::after {
            content: '';
            position: absolute;
            top: 75%;
            right: 25%;
            width: 384px;
            height: 384px;
            background: linear-gradient(135deg, rgba(30, 58, 138, 0.1), rgba(30, 64, 175, 0.1));
            border-radius: 50%;
            filter: blur(96px);
            animation: pulse-professional 3s ease-in-out infinite 1s;
        }

        /* Navigation */
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(30, 64, 175, 0.2);
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 50;
            box-shadow: 0 8px 32px rgba(15, 23, 42, 0.4);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .logo i {
            font-size: 2rem;
            color: var(--primary-light);
            animation: pulse-professional 2s ease-in-out infinite;
            position: relative;
        }

        .logo i::after {
            content: '';
            position: absolute;
            inset: 0;
            width: 2rem;
            height: 2rem;
            background: rgba(59, 130, 246, 0.2);
            border-radius: 50%;
            animation: ping-professional 1s cubic-bezier(0, 0, 0.2, 1) infinite;
        }

        .logo h1 {
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .about-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            color: var(--slate-300);
            text-decoration: none;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            background: transparent;
            border: none;
            cursor: pointer;
        }

        .about-btn:hover {
            color: var(--primary-light);
            background: rgba(59, 130, 246, 0.1);
            transform: translateY(-2px) scale(1.05);
        }

        /* Main container */
        .main-container {
            position: relative;
            z-index: 10;
            padding: 6rem 1rem 8rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .dashboard {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        @media (min-width: 1024px) {
            .dashboard {
                grid-template-columns: 1fr 3fr;
            }
        }

        /* Profile Card */
        .profile-card {
            background: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.9), 
                rgba(248, 250, 252, 0.9)
            );
            backdrop-filter: blur(16px);
            border: 1px solid rgba(30, 64, 175, 0.2);
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 8px 32px rgba(15, 23, 42, 0.1);
            text-align: center;
            position: relative;
            overflow: hidden;
            height: fit-content;
        }

        .profile-card::before {
            content: '';
            position: absolute;
            top: -1rem;
            right: -1rem;
            width: 6rem;
            height: 6rem;
            background: linear-gradient(135deg, rgba(30, 64, 175, 0.1), rgba(59, 130, 246, 0.1));
            border-radius: 50%;
            filter: blur(24px);
            animation: pulse-professional 3s ease-in-out infinite;
        }

        .profile-card::after {
            content: '';
            position: absolute;
            bottom: -1rem;
            left: -1rem;
            width: 8rem;
            height: 8rem;
            background: linear-gradient(135deg, rgba(30, 58, 138, 0.1), rgba(30, 64, 175, 0.1));
            border-radius: 50%;
            filter: blur(24px);
            animation: pulse-professional 3s ease-in-out infinite 1s;
        }

        .profile-img-container {
            position: relative;
            display: inline-block;
            margin-bottom: 1rem;
            z-index: 10;
        }

        .profile-img {
            width: 6rem;
            height: 6rem;
            border-radius: 50%;
            border: 4px solid var(--primary-light);
            box-shadow: 0 4px 16px rgba(15, 23, 42, 0.1);
        }

        .online-indicator {
            position: absolute;
            top: -0.25rem;
            right: -0.25rem;
            width: 1.5rem;
            height: 1.5rem;
            background: var(--success);
            border-radius: 50%;
            border: 2px solid white;
            animation: bounce-gentle 1s infinite;
        }

        .profile-name {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--slate-900);
            margin-bottom: 0.75rem;
            position: relative;
            z-index: 10;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            background: rgba(5, 150, 105, 0.1);
            border: 1px solid rgba(5, 150, 105, 0.3);
            border-radius: 9999px;
            margin-bottom: 1rem;
            position: relative;
            z-index: 10;
        }

        .status-dot {
            width: 0.5rem;
            height: 0.5rem;
            background: var(--success);
            border-radius: 50%;
            margin-right: 0.5rem;
            animation: pulse-professional 2s ease-in-out infinite;
        }

        .status-text {
            color: var(--success);
            font-weight: 600;
            font-size: 0.875rem;
        }

        .contact-info {
            margin: 1.5rem 0;
            position: relative;
            z-index: 10;
        }

        .contact-item {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            color: var(--slate-600);
            margin: 0.75rem 0;
            font-size: 0.875rem;
            transition: color 0.3s ease;
        }

        .contact-item:hover {
            color: var(--slate-900);
        }

        .logout-btn {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            background: linear-gradient(135deg, var(--emergency), var(--emergency-light));
            color: white;
            border: none;
            border-radius: 0.5rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 16px rgba(220, 38, 38, 0.2);
            position: relative;
            z-index: 10;
        }

        .logout-btn:hover {
            background: linear-gradient(135deg, #b91c1c, #dc2626);
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 8px 24px rgba(220, 38, 38, 0.3);
        }

        /* Cards */
        .card {
            backdrop-filter: blur(16px);
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 8px 32px rgba(15, 23, 42, 0.1);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(30, 64, 175, 0.1);
        }

        .card-header {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .card-dot {
            width: 0.75rem;
            height: 0.75rem;
            border-radius: 50%;
            animation: pulse-professional 2s ease-in-out infinite;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--slate-900);
        }

        /* Emergency Alert */
        .emergency-card {
            background: linear-gradient(135deg, 
                rgba(220, 38, 38, 0.1), 
                rgba(239, 68, 68, 0.05)
            );
            border: 2px solid rgba(220, 38, 38, 0.2);
            grid-column: span 1;
            animation: pulse-emergency 3s ease-in-out infinite;
        }

        @media (min-width: 768px) {
            .emergency-card {
                grid-column: span 2;
            }
        }

        .emergency-indicator {
            position: absolute;
            top: 1rem;
            right: 1rem;
            width: 1rem;
            height: 1rem;
            background: var(--emergency);
            border-radius: 50%;
            animation: ping-professional 1s cubic-bezier(0, 0, 0.2, 1) infinite;
        }

        .emergency-indicator::after {
            content: '';
            position: absolute;
            inset: 0;
            background: var(--emergency);
            border-radius: 50%;
        }

        .emergency-info {
            margin: 0.75rem 0;
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        @media (min-width: 768px) {
            .emergency-info {
                grid-template-columns: 1fr 1fr;
            }
        }

        .emergency-details {
            space-y: 0.75rem;
        }

        .emergency-info-item {
            display: flex;
            margin: 0.75rem 0;
            gap: 0.75rem;
        }

        .emergency-label {
            font-weight: 600;
            color: var(--emergency);
            min-width: 5rem;
            flex-shrink: 0;
        }

        .emergency-value {
            color: var(--slate-900);
            font-weight: 500;
        }

        .map-placeholder {
            background: rgba(30, 41, 59, 0.05);
            border-radius: 0.75rem;
            height: 8rem;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid rgba(100, 116, 139, 0.2);
            margin: 1rem 0;
            text-align: center;
        }

        .map-placeholder-content {
            position: relative;
            z-index: 10;
        }

        .map-icon {
            width: 3rem;
            height: 3rem;
            background: rgba(220, 38, 38, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 0.5rem;
        }

        .map-icon i {
            width: 1.5rem;
            height: 1.5rem;
            background: var(--emergency);
            border-radius: 50%;
            animation: ping-professional 1s cubic-bezier(0, 0, 0.2, 1) infinite;
        }

        .emergency-time {
            text-align: center;
        }

        .time-label {
            font-weight: 600;
            color: var(--emergency);
            display: block;
            margin-bottom: 0.5rem;
        }

        .time-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--slate-900);
        }

        /* Location Card */
        .location-card {
            background: linear-gradient(135deg, 
                rgba(30, 64, 175, 0.1), 
                rgba(59, 130, 246, 0.05)
            );
            border: 1px solid rgba(30, 64, 175, 0.2);
        }

        .location-dot {
            background: var(--primary-light);
        }

        .location-map {
            background: rgba(30, 64, 175, 0.05);
            position: relative;
        }

        .location-icon {
            width: 4rem;
            height: 4rem;
            background: rgba(30, 64, 175, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 0.75rem;
        }

        .location-icon i {
            width: 2rem;
            height: 2rem;
            background: var(--primary-light);
            border-radius: 50%;
            animation: ping-professional 1s cubic-bezier(0, 0, 0.2, 1) infinite;
        }

        /* Status Card */
        .status-card {
            background: linear-gradient(135deg, 
                rgba(5, 150, 105, 0.1), 
                rgba(16, 185, 129, 0.05)
            );
            border: 1px solid rgba(5, 150, 105, 0.2);
        }

        .status-card .status-dot {
            background: var(--success);
        }

        .status-info {
            margin: 1.5rem 0;
        }

        .status-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 0.75rem 0;
        }

        .status-label {
            font-weight: 600;
            color: var(--success);
        }

        .status-value {
            color: var(--slate-900);
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status-btn {
            width: 100%;
            padding: 0.75rem 1rem;
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
            color: white;
            border: none;
            border-radius: 0.5rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 16px rgba(30, 64, 175, 0.2);
        }

        .status-btn:hover {
            background: linear-gradient(135deg, #1d4ed8, #2563eb);
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 8px 24px rgba(30, 64, 175, 0.3);
        }

        /* Action Buttons */
        .actions-container {
            grid-column: span 1;
        }

        @media (min-width: 768px) {
            .actions-container {
                grid-column: span 2;
            }
        }

        .actions-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        @media (min-width: 768px) {
            .actions-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .action-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            padding: 1rem 1.5rem;
            font-weight: 700;
            font-size: 1.125rem;
            color: white;
            border: none;
            border-radius: 0.75rem;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 32px rgba(15, 23, 42, 0.1);
            min-height: 4rem;
        }

        .action-btn:hover {
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 12px 40px rgba(15, 23, 42, 0.2);
        }

        .call-btn {
            background: linear-gradient(135deg, var(--emergency), var(--emergency-light));
        }

        .call-btn:hover {
            background: linear-gradient(135deg, #b91c1c, #dc2626);
        }

        .send-btn {
            background: linear-gradient(135deg, var(--success), var(--success-light));
        }

        .send-btn:hover {
            background: linear-gradient(135deg, #047857, #059669);
        }

        /* Bottom Navigation */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(12px);
            border-top: 1px solid rgba(30, 64, 175, 0.2);
            padding: 0.75rem 1.5rem;
            z-index: 50;
            box-shadow: 0 -8px 32px rgba(15, 23, 42, 0.1);
        }

        .bottom-nav-content {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 2rem;
            max-width: 24rem;
            margin: 0 auto;
        }

        .nav-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.25rem;
            padding: 0.5rem 1rem;
            color: var(--slate-300);
            background: none;
            border: none;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .nav-btn:hover {
            color: var(--primary-light);
            background: rgba(59, 130, 246, 0.1);
            transform: translateY(-2px) scale(1.1);
        }

        .nav-btn i {
            font-size: 1.25rem;
        }

        .nav-btn span {
            font-size: 0.75rem;
            font-weight: 600;
        }

        .nav-btn.logout:hover {
            color: var(--emergency-light);
            background: rgba(239, 68, 68, 0.1);
        }

        /* Animations */
        @keyframes pulse-professional {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.6;
            }
        }

        @keyframes pulse-emergency {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.8;
            }
        }

        @keyframes ping-professional {
            75%, 100% {
                transform: scale(2);
                opacity: 0;
            }
        }

        @keyframes bounce-gentle {
            0%, 100% {
                transform: translateY(-25%);
                animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
            }
            50% {
                transform: translateY(0);
                animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
            }
        }

        /* Dashboard grid layout */
        .dashboard-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        @media (min-width: 768px) {
            .dashboard-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .navbar {
                padding: 0.75rem 1rem;
            }
            
            .logo h1 {
                font-size: 1.5rem;
            }
            
            .main-container {
                padding: 5rem 1rem 6rem;
            }
            
            .emergency-card,
            .actions-container {
                grid-column: span 1;
            }

            .emergency-info {
                grid-template-columns: 1fr;
            }
            
            .actions-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
