        .main-container {
            position: relative;
            z-index: 10;
            padding: 6rem 1rem 8rem;
        }

        .dashboard {
            max-width: 1400px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        @media (min-width: 1024px) {
            .dashboard {
                grid-template-columns: 1fr 3fr;
            }
        }

        /* Profile Card */
        .profile-card {
