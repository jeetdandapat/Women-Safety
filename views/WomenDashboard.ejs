      <h3 class="emergency-title">
        <i class="fas fa-phone-alt"></i>
        Emergency Contacts
      </h3>
      <form class="contact-form">
        <div class="form-row">
          <input type="text" placeholder="Name" required />
          <input type="tel" placeholder="Phone Number" required />
          <button type="submit" class="add-btn">
            <i class="fas fa-plus"></i>
            Add
          </button>
        </div>
      </form>
      <div class="contact-list">
        <div class="contact-item">
          <div class="contact-info">
            <h4><i class="fas fa-user"></i> abxc</h4>
            <p><i class="fas fa-phone"></i> +91 9876543210</p>
          </div>
          <div class="contact-actions">
            <button class="edit-contact-btn" title="Edit">
              <i class="fas fa-edit"></i>
            </button>
            <button class="delete-btn" title="Delete">
              <i class="fas fa-trash"></i>
            </button>
            <button class="call-btn" title="Call">
              <i class="fas fa-phone"></i>
            </button>
            <button class="chat-btn" title="Chat">
              <i class="fas fa-comment"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Police Station -->
    <div class="card">
      <h3 class="emergency-title">
        <i class="fas fa-shield-alt"></i>
        Nearest Police Station (within 500m)
      </h3>
      <div class="police-content">
        <div class="police-info">
          <p><i class="fas fa-shield-alt"></i> xyz Police Station</p>
          <p><i class="fas fa-map-pin"></i> cjus,hy</p>
        </div>
        <a href="tel:100" class="call-100-btn">
          <i class="fas fa-phone"></i>
          Call 
        </a>
      </div>
    </div>

    <!-- Volunteer Network -->
    <div class="card">
      <h3 class="emergency-title">
        <i class="fas fa-hands-helping"></i>
        Registered Volunteers (within 500m)
      </h3>
      <div class="volunteer-grid">
        <div class="volunteer-item">
          <div class="volunteer-header">
            <div class="volunteer-name">
              <i class="fas fa-user"></i>
              A
            </div>
            <div class="volunteer-distance">Distance: 200m</div>
          </div>
          <div class="volunteer-actions">
            <button class="volunteer-chat-btn">
              <i class="fas fa-comment"></i>
              Chat
            </button>
            <button class="volunteer-call-btn">
              <i class="fas fa-phone"></i>
              Call
            </button>
          </div>
        </div>
        <div class="volunteer-item">
          <div class="volunteer-header">
            <div class="volunteer-name">
              <i class="fas fa-user"></i>
              B
            </div>
            <div class="volunteer-distance">Distance: 300m</div>
          </div>
          <div class="volunteer-actions">
            <button class="volunteer-chat-btn">
              <i class="fas fa-comment"></i>
              Chat
            </button>
            <button class="volunteer-call-btn">
              <i class="fas fa-phone"></i>
              Call
            </button>
          </div>
        </div>
        <div class="volunteer-item">
          <div class="volunteer-header">
            <div class="volunteer-name">
              <i class="fas fa-user"></i>
              C
            </div>
            <div class="volunteer-distance">Distance: 450m</div>
          </div>
          <div class="volunteer-actions">
            <button class="volunteer-chat-btn">
              <i class="fas fa-comment"></i>
              Chat
            </button>
            <button class="volunteer-call-btn">
              <i class="fas fa-phone"></i>
              Call
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="bottom-nav">
  <a href="/">
    <i class="fas fa-home"></i>
    <span>Home</span>
  </a>
  
