    <div class="logo">
      <i class="fas fa-shield-alt"></i>
       Safety
    </div>
    <div class="user-icon">
      <i class="fas fa-user"></i>
    </div>
  </div>

  <!-- Main Container -->
  <div class="container">
    <!-- User Profile -->
    <div class="card">
      <div class="profile-content">
        <div>
          <div class="avatar">
            <i class="fas fa-user"></i>
          </div>
          <div class="user-name">XYZ</div>
        </div>
        <div class="user-details">
