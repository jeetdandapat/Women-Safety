 <!-- Main Container -->
<div class="container">
  <!-- User Profile -->
  <div class="card">
    <div class="profile-content">
      <div>
        <div class="avatar">
          <!-- First letter of user name -->
          <%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %>
        </div>
        <div class="user-name"><%= user.name %></div>
      </div>
      <div class="user-details">
        <p><i class="fas fa-envelope"></i> <%= user.email %></p>
        <p><i class="fas fa-map-marker-alt"></i> <%= user.address %></p>
        <button class="edit-btn">
          <i class="fas fa-edit"></i>
          Edit Profile
        </button>
      </div>
    </div>
  </div>

  <!-- Emergency Contacts -->
  <div class="card">
    <h3 class="section-title">
      <i class="fas fa-phone-alt"></i> Emergency Contacts
    </h3>

    <!-- Add Contact Form -->
    <form class="contact-form" action="/dashboard/add-contact" method="POST">
      <div class="form-row">
        <input type="text" name="contactName" placeholder="Name" required />
        <input type="email" name="contactEmail" placeholder="Email Address" required />
        <input type="tel" name="contactPhone" placeholder="Phone Number" required />
        <input type="hidden" name="email" value="<%= user.email %>" />
        <button type="submit" class="add-btn">
          <i class="fas fa-plus"></i> Add
        </button>
      </div>
    </form>

    <!-- List Contacts -->
    <div class="contact-list" id="contactList">
      <% if (user.emergencyContacts.length > 0) { %>
        <% user.emergencyContacts.forEach(contact => { %>
          <div class="contact-item">
            <div class="contact-info">
              <h4><i class="fas fa-user"></i> <%= contact.name %></h4>
              <p><i class="fas fa-envelope"></i> <%= contact.email %></p>
              <p><i class="fas fa-phone"></i> <%= contact.phone %></p>
            </div>
            <div class="contact-actions">
              <!-- Actions -->
              <button class="call-btn" title="Call" onclick="callContact('<%= contact.phone %>')">
                <i class="fas fa-phone"></i>
              </button>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No emergency contacts found.</p>
      <% } %>
    </div>
  </div>
<!-- </div> -->



        <!-- Police Station -->
        <div class="card">
            <h3 class="section-title">
                <i class="fas fa-shield-alt"></i>
                Nearest Police Station (within 500m)
            </h3>
            <div class="police-content">
                <div class="police-info">
