        /* Container */
        .container {
            max-width: 580px;
            margin: 0 auto;
            padding: 1.5rem;
            padding-bottom: 6rem;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        /* Card Styles */
        .card {
            background: rgb(252, 252, 250);
            border-radius: 20px;
            padding: 1.2rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            border: 1px solid #0a0d12;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        }

        /* User Profile */
        .profile-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            gap: 1.5rem;
        }

        .avatar {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: rgb(8, 7, 7);
            box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
            transition: all 0.3s ease;
        }

        .avatar:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 35px rgba(59, 130, 246, 0.4);
        }

        .user-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 1rem;
        }

        .user-details {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            width: 100%;
        }

        .user-details p {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.95rem;
            color: #64748b;
            padding: 0.5rem;
            background: #f8fafc;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .user-details p:hover {
            background: #f1f5f9;
            transform: translateX(5px);
        }

        .user-details i {
            color: #3b82f6;
            width: 20px;
            text-align: center;
        }

        .edit-btn {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

        .edit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
        }

        /* Section Titles */
        .section-title {
            color: #1e293b;
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .section-title i {
            color: #3b82f6;
            font-size: 1.25rem;
        }

        /* Contact Form */
        .contact-form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .form-row {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
            align-items: center;
        }

        .form-row input {
            flex: 1;
            min-width: 150px;
            padding: 0.875rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            background: #f8fafc;
            color: #1e293b;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .form-row input:focus {
            outline: none;
            border-color: #3b82f6;
            background: white;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .form-row input::placeholder {
            color: #94a3b8;
        }

        .add-btn {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            border: none;
            padding: 0.875rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            white-space: nowrap;
            transition: all 0.3s ease;
            flex-shrink: 0;
        }

        .add-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
        }

        /* Contact List */
        .contact-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .contact-item {
            background: #f8fafc;
            padding: 1.25rem;
            border-radius: 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .contact-item:hover {
            background: #f1f5f9;
            transform: translateX(5px);
        }

        .contact-info h4 {
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #1e293b;
        }

        .contact-info p {
            font-size: 0.9rem;
            color: #64748b;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .contact-actions {
            display: flex;
            gap: 0.5rem;
        }

        .contact-actions button {
            width: 40px;
            height: 40px;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
        }

        .edit-contact-btn {
            background: #fbbf24;
            color: #1f2937;
        }

        .delete-btn {
            background: #ef4444;
            color: white;
        }

        .call-btn {
            background: #06b6d4;
            color: white;
        }

        .chat-btn {
            background: #8b5cf6;
            color: white;
        }

        .contact-actions button:hover {
            transform: translateY(-2px) scale(1.05);
        }

        /* Police Station */
        .police-content {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .police-info {
            color: #1e293b;
        }

        .police-info p {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
            font-size: 0.95rem;
            padding: 0.75rem;
            background: #f8fafc;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .police-info p:hover {
            background: #f1f5f9;
            transform: translateX(5px);
        }

        .police-info p:first-child {
            font-weight: 600;
        }

        .police-info i {
            color: #3b82f6;
            width: 20px;
            text-align: center;
        }

        .call-police-btn {
            width: 100%;
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            border: none;
            padding: 1rem 1.5rem;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.1rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .call-police-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(239, 68, 68, 0.4);
        }

        /* Volunteer Network */
        .volunteer-grid {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .volunteer-item {
            background: #f8fafc;
            padding: 1.25rem;
            border-radius: 16px;
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .volunteer-item:hover {
            background: #f1f5f9;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        }

        .volunteer-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .volunteer-name {
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #1e293b;
        }

        .volunteer-distance {
            font-size: 0.85rem;
            color: #64748b;
            background: #e2e8f0;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
        }

        .volunteer-actions {
            display: flex;
            gap: 0.75rem;
        }

        .volunteer-actions button {
            flex: 1;
            padding: 0.75rem 1rem;
            border: none;
            border-radius: 12px;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .volunteer-chat-btn {
            background: #8b5cf6;
            color: white;
        }

        .volunteer-call-btn {
            background: #06b6d4;
            color: white;
        }

        .volunteer-actions button:hover {
            transform: translateY(-2px);
        }

        /* Bottom Navigation */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
               background: #06062f;
            display: flex;
            justify-content: space-around;
            /* padding: 1rem 0; */
            box-shadow: 0 -8px 30px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            backdrop-filter: blur(10px);
        }

        .bottom-nav a {
            color: white;
            text-decoration: none;
            font-weight: 600;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
            padding: 0.3rem 1.5rem;
            transition: all 0.3s ease;
            border-radius: 12px;
        }

        .bottom-nav a:hover {
            color: #0e1014;
            transform: translateY(-2px);
            background: rgba(220, 229, 243, 0.1);
        }

        .bottom-nav a span {
            font-size: 0.8rem;
        }

        .bottom-nav a i {
            font-size: 0.9rem;
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            animation: fadeInUp 0.6s ease forwards;
        }

        .card:nth-child(1) { animation-delay: 0.1s; }
        .card:nth-child(2) { animation-delay: 0.2s; }
        .card:nth-child(3) { animation-delay: 0.3s; }
        .card:nth-child(4) { animation-delay: 0.4s; }

        /* Mobile Responsive */
        @media (max-width: 480px) {
            .container {
                padding: 1rem;
                gap: 1.25rem;
            }

            .form-row {
                flex-direction: column;
            }

            .form-row input {
                min-width: 100%;
            }

            .contact-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .contact-actions {
                align-self: stretch;
                justify-content: center;
            }

            .volunteer-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.75rem;
            }

            .volunteer-actions {
                align-self: stretch;
            }

            .header {
                padding: 0.75rem 1rem;
            }

            .logo {
                font-size: 1.1rem;
            }
        }

        /* Success animation */
        @keyframes success {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        .success-animation {
            animation: success 0.3s ease;
        }
    </style>
</head>
