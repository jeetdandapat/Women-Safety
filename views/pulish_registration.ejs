<body>

  <!-- Top Navbar -->
  <div class="navbar">
    <div class="logo">
      <i class="fas fa-shield-alt"></i> Women Safety
    </div>
    <a href="#" class="about-link"><i class="fas fa-circle-info"></i> About</a>
  </div>

  <!-- Registration Form -->
  <div class="page-container">
    <div class="form-header">
      <h1 class="form-title"><i class="fas fa-user-shield"></i> Police Registration</h1>
      <p class="form-subtitle">Securely register your police station</p>
    </div>

    <form id="policeRegisterForm" class="form">
      <div class="form-group">
        <label>State *</label>
        <select required>
          <option value="">Select State</option>
          <option>West Bengal</option>
          <option>Maharashtra</option>
          <option>Uttar Pradesh</option>
          <!-- Add more states -->
        </select>
      </div>

      <div class="form-group">
        <label>District *</label>
        <select required>
          <option value="">Select District</option>
          <option>North 24 Parganas</option>
          <option>Howrah</option>
          <option>Kolkata</option>
          <!-- Add more districts -->
        </select>
      </div>

      <div class="form-group">
        <label>Area *</label>
        <select required>
          <option value="">Select Area</option>
          <option>Barasat</option>
          <option>Dumdum</option>
          <option>Salt Lake</option>
          <!-- Add more areas -->
        </select>
      </div>

      <div class="form-group">
        <label>Police Station *</label>
        <select required>
          <option value="">Select Police Station</option>
          <option>Barasat PS</option>
          <option>Salt Lake PS</option>
          <option>Dumdum PS</option>
          <!-- Add more -->
        </select>
      </div>

      <div class="form-group">
        <label>Station Code *</label>
        <input type="text" required placeholder="Enter unique station code">
      </div>

      <div class="form-group">
        <label>Mobile Number *</label>
        <input type="tel" required placeholder="Enter contact number">
      </div>

      <div class="form-group">
        <label>Password *</label>
        <input type="password" required placeholder="Create a password">
      </div>

      <button type="submit" class="btn-primary">Register Station</button>
    </form>

    <div class="form-footer">
      <p>Already registered? <a href="/Police_login">Login here</a></p>
    </div>
  </div>

  <!--  Bottom Nav -->
  <div class="bottom-nav">
    <a href="/WomenLogin"><i class="fas fa-female"></i><span>Women</span></a>
    <a href="/volunteer-login"><i class="fas fa-hands-helping"></i><span>Volunteer</span></a>
    <a href="/Police_login"><i class="fas fa-user-shield"></i><span>Police</span></a>
  </div>

</body>
