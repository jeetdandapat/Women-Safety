    // Loading animation
    window.addEventListener('load', function() {
      setTimeout(() => {
        document.getElementById('loadingOverlay').classList.add('hidden');
      }, 1000);
    });

    // Create floating particles
    function createParticles() {
      const particles = document.getElementById('particles');
      for (let i = 0; i < 50; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.top = Math.random() * 100 + '%';
        particle.style.animationDelay = Math.random() * 6 + 's';
        particle.style.animationDuration = (Math.random() * 3 + 3) + 's';
        particles.appendChild(particle);
      }
    }

    // Navbar scroll effect
    window.addEventListener('scroll', function() {
      const navbar = document.getElementById('navbar');
      if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    });

    // Initialize particles
    createParticles();

    // Placeholder functions
    function showAbout() {
      alert('Women Safety Community - A comprehensive platform for women\'s safety and security. Connect with volunteers and police for immediate assistance when needed.');
    }

    function handleRegister(type) {
      alert(`Opening registration for ${type}...`);
    }

    function handleLogin(type) {
      alert(`Opening login for ${type}...`);
    }

    function scrollToSection(section) {
      const element = document.querySelector(`.${section === 'women' ? 'main-box' : 'role-box.' + section}`);
      if (element) {
        element.scrollIntoView({ behavior: 'smooth' });
      }
    }

    // Add smooth scrolling for better UX
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
